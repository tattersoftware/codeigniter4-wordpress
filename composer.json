{
	"name": "tatter/wordpress",
	"description": "WordPress content management for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"wordpress",
		"content",
		"management"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-wordpress",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php" : ">=7.2"
	},
	"require-dev": {
		"codeigniter4/codeigniter4": "dev-develop",
		"fakerphp/faker": "^1.10",
		"phpunit/phpunit": "^8.5",
		"phpstan/phpstan": "^1.10",
		"squizlabs/php_codesniffer": "^3.5",
		"codeigniter4/codeigniter4-standard": "^1.0",
		"wp-cli/wp-cli-bundle": "^2.4"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\WordPress\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"analyze": "phpstan analyze",
		"style": "phpcs --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 src/ tests/",
		"test": "phpunit"
	}
}
